.container.user-new
  = form_for @user do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Edit Profile
        .user-name_image.row
          .user-name.col-md-10
            = f.text_field :nickname, placeholder: "Username", value: "#{@user.nickname}"
          .user-image.col-md-2{:style: 'background-image: url(http://泣ける動画.com/wp-content/uploads/2015/01/t0205-01.jpg);'}
            %button.btn.btn-primary Change image
            = f.file_field :avatar
        = f.email_field :email, placeholder: "E-Mail", class: "user_email", value: "#{@user.email}"
        = f.password_field :password, placeholder: "Password"
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :member_of, placeholder: "Member", value: "#{@user.member_of}"
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, cols: "30", rows: "4", placeholder: "Profile", value: "#{@user.profile}"
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :Works, cols: "30", rows: "4", placeholder: "Works", value: "#{@user.works}"
    .row.text-center.user-btn
      = f.submit value: "Save", class: "btn btn-lg btn-primary btn-block"
